<h1>New Task</h1>

  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title%>
      <%= f.text_field :title%>
    </div>
    <div class="form-group">
      <%= f.label :details%>
      <%= f.text_area :details %>
    </div>
    <% unless @task.new_record? %>
      <div class="form-group">
        <%= f.label :completed%>
        <%= f.check_box :completed %>
      </div>
    <% end %>
  <%= f.submit%>
<% end %>
<%= link_to "Back to list", tasks_path  %>
